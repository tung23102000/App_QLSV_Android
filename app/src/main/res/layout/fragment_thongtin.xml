<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:id="@+id/fgThongtin"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/red"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">
        <TextView
            android:textColor="#FFF"
            android:textSize="23dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="210dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Thông tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:layout_gravity="center"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/img"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/white"
            app:civ_border_color="#FFF"/>

    </LinearLayout>
   <LinearLayout
       android:layout_marginTop="10dp"

       android:layout_gravity="center"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:background="#AAA7A7"
           android:padding="20dp"
           android:layout_height="120dp">

           <de.hdodenhof.circleimageview.CircleImageView

               android:layout_width="92dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:src="@drawable/ptit"
               app:civ_border_color="#BFBCBC"
               app:civ_border_width="2dp"
               app:civ_circle_background_color="@color/white">

           </de.hdodenhof.circleimageview.CircleImageView>
           <TextView
               android:id="@+id/tvName"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textColor="#951818"
               android:textSize="20dp"
               android:text="Nguyễn Thanh Tùng-B18DCAT225">

           </TextView>
       </LinearLayout>
<!--       <ImageView-->
<!--           android:src="@drawable/ic_launcher_background"-->
<!--           android:layout_width="100dp"-->
<!--           android:layout_height="100dp"></ImageView>-->


<!--       <TextView-->
<!--           android:gravity="center"-->
<!--           android:layout_gravity="center"-->
<!--           android:textSize="20dp"-->
<!--           android:text="Bạn ấy rất thân thiện, dễ gần"-->
<!--           android:layout_width="match_parent"-->
<!--           android:layout_height="wrap_content">-->

<!--       </TextView>-->
       <LinearLayout
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:padding="10dp"
               android:layout_marginTop="10dp"
               android:background="#AFAEAE"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:src="@drawable/ic_baseline_contact_mail_24"
                   android:layout_width="40dp"
                   android:layout_height="40dp">

               </ImageView>
               <LinearLayout

                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_marginLeft="86dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#120D0D"
                       android:textSize="15dp"
                       android:text="Email">

                   </TextView>
                   <TextView
                       android:id="@+id/tvMail"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:text="tung@gmail.com">

                   </TextView>
               </LinearLayout>


           </LinearLayout>
           <LinearLayout
               android:padding="12dp"
               android:layout_marginTop="10dp"
               android:background="#B5B0B0"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <ImageView
                   android:src="@drawable/ic_baseline_account_circle_24"
                   android:layout_width="40dp"
                   android:layout_height="40dp">

               </ImageView>
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_marginLeft="86dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#120D0D"
                       android:textSize="15dp"
                       android:text="Username">

                   </TextView>
                   <TextView
                       android:layout_marginLeft="86dp"
                        android:id="@+id/tvUsername"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:text="tung">

                   </TextView>
               </LinearLayout>


           </LinearLayout>
           <LinearLayout
               android:layout_marginTop="30dp"
               android:layout_gravity="center"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
              <Button
                  android:drawableLeft="@drawable/ic_baseline_update_24"
                  android:paddingLeft="35dp"
                  android:paddingRight="45dp"
                  android:text="Đổi mật khẩu"
                  android:textColor="#FFF"
android:background="#377E17"
                  android:id="@+id/btnUpdateProfile"
                  android:layout_width="365dp"
                  android:layout_height="wrap_content">

              </Button>
               <Button

                   android:paddingLeft="35dp"
                   android:paddingRight="45dp"
                  android:background="#A31212"
                   android:layout_marginTop="25dp"
                   android:text="Log out"
                   android:drawableLeft="@drawable/ic_baseline_logout_24"
                   android:textColor="#FFF"
                   android:id="@+id/btnLogout"
                   android:layout_width="365dp"
                   android:layout_height="wrap_content">

               </Button>
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>
</LinearLayout>